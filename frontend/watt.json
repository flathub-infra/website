{
  "$schema": "https://schemas.platformatic.dev/@platformatic/next/3.27.0.json",
  "logger": {
    "level": "{PLT_SERVER_LOGGER_LEVEL}"
  },
  "server": {
    "hostname": "0.0.0.0",
    "port": "{PORT}"
  },
  "runtime": {
    "workers": "{PLT_NEXT_WORKERS}",
    "application": {
      "envfile": ".env.production"
    }
  },
  "cache": {
    "adapter": "valkey",
    "url": "{REDIS_URL}",
    "prefix": "watt",
    "maxTTL": 604800
  }
}
